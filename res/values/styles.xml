<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="HoloBlueDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ff33b5e5</item>
    </style>

    <style name="HoloBlueDividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ff33b5e5</item>
    </style>

    <style name="ThickHoloBlueDividerHor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ff33b5e5</item>
    </style>

    <style name="ThickHoloBlueDividerVert">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ff33b5e5</item>
    </style>

    <style name="ZThickRedDividerVertical">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#cb202d</item>
    </style>

    <style name="ZThickRedDividerHor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">#cb202d</item>
    </style>

    <style name="GrayDividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ThinGrayDividerHor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MainTextViewSelected">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SubTextViewSelected">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MainTextViewNotSelected">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SubTextViewNotSelected">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RL_TV_Text">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MBR_TV_Selected">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MBR_TV_fields">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MBR_TV_NotSelected">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MBR_TV_Header">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LR_Curr_LV_Row">
        <item name="android:textColor">@color/sysBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LR_Curr_LV_SubRow">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>