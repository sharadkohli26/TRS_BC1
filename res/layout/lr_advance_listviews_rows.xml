<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top"
    android:background="@drawable/res_lv"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lr_adv_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/SteelBlue"
        android:clickable="false"
        android:gravity="center_vertical|left"
        android:padding="4sp"
        android:text="date"
        android:textColor="@color/sysWhite"
        android:textSize="18sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lr_adv_lv_NumTables"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lr_adv_lv_NumGuests"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" />
        </LinearLayout>

        <View
            style="@style/GrayDividerVertical"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lr_adv_lv_ResFor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" />
        </LinearLayout>

        <View
            style="@style/GrayDividerVertical"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/lr_adv_lv_lrguestname"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lr_adv_lv_GuestName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/whiteback_greenphone"
                android:gravity="center|center_vertical"
                android:textAppearance="@style/LR_Curr_LV_Row" />

            <TextView
                android:id="@+id/lr_adv_lv_ContactNo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textAppearance="@style/LR_Curr_LV_SubRow"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>