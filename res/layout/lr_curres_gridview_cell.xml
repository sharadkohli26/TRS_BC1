<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/res_gridview"
    android:baselineAligned="false"
    android:clickable="true"
    android:gravity="center"    
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lr_curr_gv_NumTables"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            style="@style/GrayDividerVertical"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/lr_curr_gv_NumGuests"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lr_curr_gv_StartTime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            style="@style/GrayDividerVertical"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/lr_curr_gv_TimeElapsed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lr_curr_gv_lrguestname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lr_curr_gv_GuestName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawableRight="@drawable/whiteback_greenphone"
            android:gravity="center|center_vertical"
            android:textAppearance="@style/LR_Curr_LV_Row" />

        <TextView
            android:id="@+id/lr_curr_gv_ContactNo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textAppearance="@style/LR_Curr_LV_SubRow"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>